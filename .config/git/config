[core]
  editor = nvim
  pager = delta --diff-so-fancy

[delta]
  navigate = true

[interactive]
  diffFilter = delta --diff-so-fancy --color-only

[diff]
  tool = nvimdiff

[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[merge]
  tool = nvimdiff
  conflictStyle = zdiff3

[mergetool]
  keepBackup = false
  prompt = false

[mergetool "nvimdiff"]
  cmd = "nvim -d \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\" -c 'wincmd J | wincmd ='"

[include]
  path = ~/.config/git/config.local
